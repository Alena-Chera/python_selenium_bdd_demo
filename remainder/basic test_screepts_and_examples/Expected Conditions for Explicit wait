


from selenium.webdriver.support import expected_conditions as EC

FIRST_BUTTON = (By.XPATH, "//div[@class='banner']//li[1]")

context.driver.wait.until(EC.element_to_be_clickable(FIRST_BUTTON))
context.driver.wait.until(EC.presence_of_element_located(FIRST_BUTTON))
context.wait.until(EC.title_is(“Lyte — Pre-registration”))